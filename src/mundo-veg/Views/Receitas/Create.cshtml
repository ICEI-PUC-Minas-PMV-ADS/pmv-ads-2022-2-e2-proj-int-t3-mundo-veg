@model mundo_veg.Models.Receita

@{
    ViewData["Title"] = "Create";
}


<h3>Cadastro de receitas</h3>
<hr />
<h5>@ViewBag.Message</h5>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ingredientes" class="control-label"></label>
                <input asp-for="Ingredientes" class="form-control" />
                <span asp-validation-for="Ingredientes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Modo_Preparo" class="control-label"></label>
                <input asp-for="Modo_Preparo" class="form-control" />
                <span asp-validation-for="Modo_Preparo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rendimento" class="control-label"></label>
                <input asp-for="Rendimento" class="form-control" />
                <span asp-validation-for="Rendimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dificuldade" class="control-label"></label>
                <select asp-for="Dificuldade" class="form-select" asp-items="Html.GetEnumSelectList<Dificuldade>()"></select>
                <span asp-validation-for="Dificuldade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tempo_Preparo" class="control-label"></label>
                <input asp-for="Tempo_Preparo" class="form-control" />
                <span asp-validation-for="Tempo_Preparo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Categoria" class="control-label"></label>
                <select asp-for="Categoria" class="form-select" asp-items="Html.GetEnumSelectList<Categoria>()"></select>
                <span asp-validation-for="Categoria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Imagem" class="control-label"></label>
                <input type="file" name="anexo" />
                <span asp-validation-for="Imagem" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-success btn-rounded" />
            </div>
        </form>
    </div>
</div>


