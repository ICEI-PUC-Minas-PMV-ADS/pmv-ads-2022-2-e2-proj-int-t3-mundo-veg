@model IEnumerable<mundo_veg.Models.Receita>

@{
    ViewData["Title"] = "Index";
}



<main>
    <div class="corpo">
        <h3>Receitas</h3>
    </div>
</main>

<section class="conteudo">
    @using (Html.BeginForm())
    {
        <p>
            @Html.TextBox("SearchString")
            <input type="submit" value="Buscar" class="btn btn-warning btn-rounded btn-sm" />
        </p>
    }
    <div class="lista-receitas">

@foreach (var item in Model) {
        <div class="Lista">

                <div>
                    <img src="/lib/paginareceitas.png" style="width:250px;height:250px;border-radius: 10%;box-shadow: 4px 4px 4px rgba(0, 0, 0, 0.1);" />
                </div>
            <div>
                <b>Nome:</b>
                @Html.DisplayFor(modelItem => item.Nome)
            </div>
            <div>
                <b>Ingredientes:</b>
                @Html.DisplayFor(modelItem => item.Ingredientes)
            </div>
            <div>
                <b>Modo de preparo:</b>
                @Html.DisplayFor(modelItem => item.Modo_Preparo)
            </div>
            <div>
                <b>Rendimento (porções):</b>
                @Html.DisplayFor(modelItem => item.Rendimento)
            </div>
            <div><b>Dificuldade:</b>
                @Html.DisplayFor(modelItem => item.Dificuldade)
            </div>
            <div>
                <b>Tempo de preparo (minutos):</b>
                @Html.DisplayFor(modelItem => item.Tempo_Preparo)
            </div>
            <div>
                <b>Categoria:</b>
                @Html.DisplayFor(modelItem => item.Categoria)
            </div>
                
        </div>
}

</div>
</section>

<link href="/css/receitas.css" rel="stylesheet" />
